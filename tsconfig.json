{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "lib": ["es6", "es2015", "dom"],
      "declaration": true,
      "outDir": "lib",
      "strict": true,
      "types": ["node", "jest"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "lib"
    ]
  }